<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper
	namespace="com.cos.mybatisex01.repository.PanmaeRepository">

	<select id="findByIdAndJoin"
		resultType="com.cos.mybatisex01.model.beans.PanmaeBean">
		select pm.id, pm.username, pd.name, pd.code 
		from panmae pm inner join product pd 
		on pm.productId = pd.id 
		WHERE pm.id = #{id}; 
		<!-- resultType이 없으면 리턴을 못받음 -->
	</select>

</mapper>